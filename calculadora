#include <stdio.h>
#include <stdlib.h>
#include <math.h>

float multiplicacion(float num1, float num2){
    return num1 *=num2;
}

int main () {

            float num1, num2, resultado;
            char operador;
  do{
    printf("Calculadora \n");
    printf("1. Suma\n");
    printf("2. Resta\n");
    printf("3. Multiplicar\n");
    printf("4. Dividir\n");
    printf(" 0. Salir \n");
    printf("ingrese una opcion: \n");
    scanf("%f",&operador);
    } while (operador != 0);
  
}

switch (operador) {
        case '1':
            resultado = num1 + num2;
            break;
        case '2':
            resultado = num1 - num2;
            break;
        case '3':
            resultado = num1 * num2;
            break;
        case '4':
            resultado = num1 / num2;
            break;

        case '0':
            
        default:
            printf("operador invalido. ");
            return 0;
    }
